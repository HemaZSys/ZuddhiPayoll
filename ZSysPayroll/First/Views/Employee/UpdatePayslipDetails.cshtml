        //alert(TotalIncomeMonthVal + ":" + TotalIncomeAnnualVal);
        //alert(TotalDeductionMonthVal + ":" + TotalDeductionIncomeAnnualVal);
        //alert(TotalMonthVal + ":" + TotalAnnualVal);

        $(".td1TotalGrossPay").val(TotalIncomeMonthVal.toFixed(2));
