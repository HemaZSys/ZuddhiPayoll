@model First.Models._TaxDeclFormSetting
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<First.Models.Empalldropdown> sectionlist = ViewBag.Form80CSectionlist as List<First.Models.Empalldropdown>;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: black;
        }

        * {
            box-sizing: border-box; 
        }

        /* Add padding to containers */
        .container {
            padding: 30px;
            background-color: white;
        }

        /* Full-width input fields */
        input[type=text], input[type=password] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

        /* Overwrite default styles of hr */
        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 25px;
        }

        /* Set a style for the submit button */
        .registerbtn {
            float: right;
            margin-top: 10%;
            border: none;
            border-radius: 1.5rem;
            padding: 1%;
            background: #735097;
            color: #fff;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
        }

            .registerbtn:hover {
                opacity: 1;
            }

        /* Add a blue text color to links */
        a {
            color: dodgerblue;
        }

        /* Set a grey background color and center the text of the "sign in" section */
        .signin {
            background-color: #f1f1f1;
            text-align: center;
        }


        .alignContainer {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

        .card-layout {
            box-shadow: 0 0 15px #322f2f37;
            padding: 5%;
            background: #dbaaef30;
            margin-bottom: 2%;
            margin-top: 2%;
        }
        .container-fluid {
            padding-right: 0px !important;
            padding-left: 0px !important;
        }

        input[type=text], select {
            
            padding: 7px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background: #fff;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("CreateForm80CSettings", "Tax", FormMethod.Post))
    {

        <div class="container-fluid">
            <div class="card card-layout">
                <h1>Create</h1>
                <p>Please fill in this form to Add a Form80C.</p>
                <hr>
                <div class="row">
                    @*<div class="col-sm-3 p-3">
                <label for="ID"><b>Form80C ID</b></label>
                @Html.TextBoxFor(e => e.Id, new { type = "text" })
            </div>*@
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="LineNumber" style="margin-top:15px;"><b>LineNumber</b></label>
                            </div>
                            <div class="col-lg-8 p-3">

                                @Html.TextBoxFor(e => e.LineNumber, new { type = "text" })
                            </div>
                        </div>
                    </div>


                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="SequenceNumber" style="margin-top:15px;"><b>Sequence Number</b></label>
                            </div>
                            <div class="col-lg-8 p-3">
                                @Html.TextBoxFor(e => e.SequenceNumber, new { type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="Section" style="margin-top:15px;"><b>Section</b></label>
                            </div>
                            <div class="col-lg-8 p-3">
                                @*@Html.TextBoxFor(e => e.Section, new { type = "text" })*@
                                @Html.DropDownListFor(e => e.Section, new SelectList(sectionlist, "Id", "description"))
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="SectionName" style="margin-top:15px;"><b>Section Name</b></label>
                            </div>
                            <div class="col-lg-8 p-3">
                                @Html.TextBoxFor(e => e.SectionName, new { type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="Designation" style="margin-top:15px;"><b>Description</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.Description, new { type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="ControlType" style="margin-top:15px;"><b>Control Type</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.ControlType, new { type = "text" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="MaximumValue" style="margin-top:15px;"><b>Maximum Value</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.MaximumValue, new { type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="AttachmentRequired" style="margin-top:15px;"><b>Attachment Required</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.AttachmentRequired, new { type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="AttachmentSize" style="margin-top:15px;"><b>Attachment Size</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.AttachmentSize, new { type = "text" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="AttachmentType" style="margin-top:15px;"><b>Attachment Type</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.AttachmentType, new { type = "text" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 p-3">
                        <div class="row">
                            <div class="col-lg-4 p-3">
                                <label for="AttachmentType" style="margin-top:15px;"><b>Earning Or Deduction</b></label>
                            </div>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(e => e.EarningOrDeduction, new { type = "text" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 row">
                    <div class="col-lg-10">
                    </div>
                    <div class="col-lg-1">
                        <button type="submit" class="btn btn-primary" style=" background: #735097; color: #fff;">@Html.ActionLink("Back", "Form80Csettingslist", "Tax")</button>

                        @*@Html.ActionLink("Back", "Form80Csettingslist", "Tax")*@
                    </div>

                    <div class="col-lg-1">

                        <div style="float:right;">
                            <button type="submit" class="btn btn-primary" style=" background: #735097; color: #fff;">ADD</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }


</body>
</html>

<script type="text/javascript">
    $(document).ready(function () {
        checkLogin();
    });
         $(function () {
            var msg = '@ViewData["result"]';
            if (msg == '1')
            {
                alert("Form80C Details Inserted Successfully");
                //window.location.href = window.location.href + "/Form80Csettingslist/" + $("#Id").val();

             }


         });

</script>




