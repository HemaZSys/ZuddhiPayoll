


@model IEnumerable<First.Models._TaxDeclFormSetting>

@{
    ViewBag.Title = "Index";
}


<link href="~/CSS/bootstrap.min.table.css" rel="stylesheet" />
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css">
<link rel="stylesheet" href="~/CSS/jquery.dataTables.min.css">

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid black;
    }

        table td {
            line-height: 25px;
            padding-left: 15px;
        }

        table th {
            background-color: #ae98ba;
        }

    .card-layout {
        box-shadow: 0 0 15px #322f2f37;
        padding: 1%;
        background: #dbaaef30;
        margin: 0;
    }
    .container-fluid {
        padding-right: 0px !important;
        padding-left: 0px !important;
    }

    .heading {
        text-align: center;
        font-size: 27px !important;
        font-weight: bold;
    }
    .registerbtn {
        border: none;
        border-radius: 1.5rem;
        padding: 1%;
        background: #735097;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
    }
    .registerbtn a, .registerbtn a:visited {
        color: #fff !important;
       
    }
    .glyphicon-pencil {
        font-weight: bold;
        color: #ffeb00;
    }

    .glyphicon-trash {
        color: red;
    }

    .fa-calculator {
        color: #4fe12b;
    }
</style>
<div class="container-fluid ">
    <div class="card-layout">
        <div class="heading">Declaration Form Details </div>

        @*<p>
                @Html.ActionLink("Create New", "CreateForm80CSettings")
            </p>*@
        <button class="btn btn-primary float-right registerbtn" style=" background: #733e95;margin-bottom:5px;" >@Html.ActionLink("Create New", "CreateForm80CSettings")</button>

        <div style="overflow-x:scroll;">
            <table id="tblTaxDeclSettings" class="table table-bordered">
                <thead>
                    <tr>
                        <!--<th>-->
                        @* @Html.HiddenFor(model => model.Id)*@
                        <!--</th>-->

                        <th>
                            @Html.DisplayNameFor(model => model.SequenceNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LineNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Section)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SectionName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ControlType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaximumValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AttachmentRequired)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AttachmentSize)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AttachmentType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EarningOrDeduction)
                        </th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="info">
                        <!--<td>-->
                        @* @Html.HiddenFor(modelItem => item.Id)*@
                        <!--</td>-->
                        <td>
                            @Html.DisplayFor(modelItem => item.SequenceNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LineNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Section)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectionName)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.Description)*@
                            @Html.ActionLink(item.Description, "Form80CSettingsDetails", new { id = item.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ControlType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaximumValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttachmentRequired)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttachmentSize)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttachmentType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EarningOrDeduction)
                        </td>
                        <td style="text-align:center;width:50px;">
                            @Html.ActionLink(" ", "UpdateForm80CSettings", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" })
                        </td>
                        <td style="text-align:center;width:50px;">
                            @Html.ActionLink(" ", "DeleteForm80CSettings", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", onclick = "return confirm('Are sure wants to delete?');" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="~/Js/jquery.min.js"></script>
<script src="~/Js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        checkLogin();
        $("#tblTaxDeclSettings").DataTable();
    });
</script>



