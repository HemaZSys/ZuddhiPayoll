@{
    ViewBag.Title = "LeaveList";
    List<First.Models.EmployeeLeave> EmployeeLeaveList = ViewBag.leavelistdetails;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
