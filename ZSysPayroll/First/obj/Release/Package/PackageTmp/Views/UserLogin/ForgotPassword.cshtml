@model First.Models.Enroll

@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}


<link href="~/CSS/bootstrap.min.css" rel="stylesheet" />
<link href="~/CSS/StyleSheet.css" rel="stylesheet" />
<script src="~/Js/jquery.min.js"></script>
<script src="~/Js/bootstrap.min.js"></script>
<script src="~/Js/jquery.validate.min.js"></script>
<script src="~/Js/jquery.validate.unobtrusive.js"></script>

<script type="text/javascript">
    $(function () {
        $("#Email").val(window.location.href.split('?')[1]);
    });
    </script>

<style>
    .forgotpwd{
        border:3px solid black;
        padding:15px;
        margin:auto;
        background-color:#e1e1e1;
        margin-top:10%;
        width:60%;
        text-align:center;
        border-radius:15px;
    }
    .text-fail{
        color:red;
    }
    text-success{
        color:forestgreen;
    }
</style>

@using (Html.BeginForm())
{
<div class="form-horizontal forgotpwd">
    <h2>Forgot Password</h2>
    <br />


    <div class="col-md-12">
        <div class="form-group">
            <p>Please verify/enter your registered email address below to receive an email containing a link, to reset your password.</p>
        </div>
        <div class="form-group">
            <label class="control-label col-md-12"></label>
            @Html.TextBox("Email", "", new { @class = "form-control" })
        </div>

        @if (ViewBag.Message == "User doesn't exists.")
        {
            <div class="text-fail">@ViewBag.Message</div><br />
        }
        else
        {
            <div class="text-success">@ViewBag.Message</div><br />
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <a href="~/UserLogin/Index" class="btn btn-success "><- Back</a> &nbsp;&nbsp;&nbsp;
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>
    }